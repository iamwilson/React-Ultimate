{
  "compilerOptions": {

    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "node",

    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,

    "lib": ["es6", "es7", "dom"],
  },

  "exclude": ["dist", "node_modules", "webpack"]
}
